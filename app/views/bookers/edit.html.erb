<div class='body'>
      <div class='container'>
        <div class='row'>
         <div class='col-md-6 col-md-offset-3'>
    <h1>Editing Book</h1>
  <!-- <div class='col-md-3 col-md-offset-3'>
  </div> -->
    <%= form_for(@booker) do |f| %>
  <div class="field row">
    <label for="book_title">Title</label><br>
    <%= f.text_field :title %>
  </div>

  <div class="field row">
    <label for="book_opinion">Opinion</label><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions row">
    <%= f.submit 'Create Book', :class=>"btn btn-primary col-xs-12" %>
  </div>
</form>
    <%= link_to "Show", booker_path(@booker) %>
      |
      <%= link_to "Back", bookers_path(@booker)%>
    </div>
    <div class='col-md-3'></div>
</div>
<% end %>
      </div>
    </div>
