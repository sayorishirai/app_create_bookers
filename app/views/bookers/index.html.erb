<html>
<body>
<div class='body'>
      <div class='container'>
        <div class='row'>

<div class='col-xs-3'>
    <h2>User info</h2>
    <table class='table'>
      <tr>
      <%= attachment_image_tag current_user, :image, :fill, 100, 100, fallback: 'no_image.jpg' %>
      </tr>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </table>
    <div class='row'>
      <%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    </div>

        <!-- ここから -->
  <%= render 'bookers/list', bookers: @bookers %>
  <!-- ここまで -->

</div>

  <div class='col-xs-9'>
    <h2>Books</h2>

    <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>

    <% @bookers.each do |t| %>
    <tr>
        <td>
        <%= link_to user_path(t.user) do %>
        <%= attachment_image_tag t.user, :image, :fill, 50, 50, fallback: 'no_image2.jpg' %><br>
        <% end %>
        </td>
        <td>
        <%= link_to t.title, booker_path(t) %>
        </td>
        <td><%= t.body %></td>
      </tr>
  <% end %>

  </thead>
</table>
  </div>
</div>
      </div>
    </div><!-- .body -->

</body>
</html>