<html>
<body>
<div class='body'>
      <div class='container'>
        <div class='row'>
        <div class='col-xs-3'>
    <h2>User info</h2>
    <table class='table'>
      <tr>
      <%= attachment_image_tag @bookers.user, :image, :fill, 100, 100, fallback: 'no_image.jpg' %>
      </tr>
      <tr>
        <th>name</th>
        <th><%= @bookers.user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @bookers.user.introduction %></th>
      </tr>
    </table>
    <div class='row'>
      <%= link_to "", edit_user_path(@bookers.user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    </div>
        <!-- ここから -->
  <%= render 'bookers/list', bookers: @bookers %>
  <!-- ここまで -->
  </div>

  <div class='col-xs-9'>
    <h2>Book detail</h2>
    <table class='table'>
      <tr>
        <td>
        <%= link_to user_path(@bookers.user) do %>
        <%= attachment_image_tag @bookers.user, :image, :fill, 50, 50, fallback: 'no_image2.jpg' %><br>
        <% end %>
        </td>
        <td><%= link_to @bookers.title, booker_path %></td>
        <td><%= @bookers.body %></td>

        <% if current_user.id == @bookers.user_id %>
        <td><%= link_to 'Edit', edit_booker_path, class: "btn-sm btn-success" %></td>
        <td><%= link_to "Destroy", booker_path, method: :delete, class: "btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
        <% else %>
          <!-- 何も表示しない -->
        <% end %>

      </tr>
    </table>

  </div>
</div>
      </div>
    </div>

</body>
</html>