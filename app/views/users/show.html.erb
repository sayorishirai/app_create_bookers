<div class='body'>
      <div class='container'>
        <div class='row'>
  <div class='col-xs-3'>

<h2>User info</h2>
    <table class='table'>
      <tr>
      <%= attachment_image_tag @user, :image, :fill, 100, 100, fallback: 'no_image.jpg' %>
      </tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th class="introduction"><%= @user.introduction %></th>
      </tr>
    </table>
    <div class='row'>
      <%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    </div>

    <h2>New book</h2>
    <%= form_for(@booker) do |f| %>
      <div class="field row">
        <label for="book_title">Title</label><br>
        <%= f.text_field :title %>
      </div>
      <div class="field row">
        <label for="book_opinion">Opinion</label><br>
        <%= f.text_area :body %><br>
      </div>
      <br>
      <div class="actions row">
        <%= f.submit 'Create Book', :class=>"btn btn-primary col-xs-12" %>
      </div>
    <% end %>


  </div>

  <div class='col-xs-9'>
    <h2>Books</h2>

    <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
    <% @bookers.each do |t| %>
      <tr>
        <td>
        <%= link_to attachment_image_tag @user, :image, :fill, 50, 50, fallback: 'no_image2.jpg' %>
        </td>
        <td>
          <%= link_to t.title, booker_path(t) %>
        </td>
        <td><%= t.body %></td>
      </tr>
  <% end %>

  </thead>
</table>
  </div>
</div>
      </div>
    </div><!-- .body -->