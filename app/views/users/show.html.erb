<html>
<body>
<div class='body'>
      <div class='container'>
        <div class='row'>
  <div class='col-xs-3'>
    <h2>User info</h2>
    <table class='table'>
      <tr>
      <%= attachment_image_tag @user, :image, :fill, 100, 100, fallback: 'no_image.jpg' %>
      </tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </table>
    <div class='row'>
      <%= link_to "Edit", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    </div>

    <h2>New book</h2>
 <%= form_for(@booker) do |f| %>
  <div class="field row">
    <label for="book_title">Title</label><br>
    <%= f.text_field :title %>
  </div>
  <div class="field row">
    <label for="book_opinion">Opinion</label><br>
    <%= f.text_area :body %><br>
  </div>
  <div class="actions row">
    <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book" />
  </div>
    <% end %>


  </div>

  <div class='col-xs-9'>
    <h2>Books</h2>

    <table class='table table-hover table-inverse'>
  <thead>
  
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>

    <% @user.bookers.each do |booker| %>
    <tr>
        <td>
        <%= link_to user_path(booker) %>
        <%= attachment_image_tag @user, :image, :fill, 100, 100, fallback: 'no_image.jpg' %>
        </td>
        <td>
        <%= link_to user.title, booker_path(booker) %>
        <%= booker.title %>
        </td>
        <td><%= booker.body %></td>
      </tr>
  <% end %>

  </thead>
</table>
  </div>
</div>
      </div>
    </div><!-- .body -->

</body>
</html>
</body>
</html>