<div class='body'>
      <div class='container'>
        <p id="notice"></p>
      	<h2>User info</h2>
<%= form_for(@user) do |f| %>
  <div class="field">
    <label for="user_name">Name</label>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <label for="user_image">Image</label>
    <%= f.attachment_field :image %>
  </div>
  <br>
  <div class="field">
    <label for="user_introduction">Introduction</label>
    <%= f.text_field :introduction %>
  </div>
  <br>
  <div class="actions">
   <%= f.submit 'Update User' %>
  </div>
  <% end %>

      </div>
      </div>